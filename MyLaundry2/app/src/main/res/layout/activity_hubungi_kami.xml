<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.aqi.mylaundry2.HubungiKamiActivity">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/layouthubungikami"
    android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/elaundrylogin"/>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/layouthubungikami"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:text="Jika ada kritik dan saran untuk aplikasi ini, silahkan hubungi kami melalui link dibawah ini:"/>
        <Button
            android:id="@+id/whatsapp"
            android:onClick="whatsapp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=" Whatsapp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/wabutton"
            android:background="@drawable/buttonstyle2"
            android:textAllCaps="false"
           />
        <Button
            android:id="@+id/gmail"
            android:layout_marginTop="10dp"
            android:onClick="gmail"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Gmail"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/buttonstyle2"
            android:drawableLeft="@drawable/gmailbutton"
            android:textAllCaps="false"
            />
         <Button
             android:gravity="center"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
            android:id="@+id/instagram"
            android:onClick="instagram"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
             android:drawableLeft="@drawable/instagrambuton"
             android:text=" Instagram"
            android:textAllCaps="false"
             android:background="@drawable/buttonstyle2"/>
    </LinearLayout>

</RelativeLayout>

