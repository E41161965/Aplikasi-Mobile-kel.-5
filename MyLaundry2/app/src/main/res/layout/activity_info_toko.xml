<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.aqi.mylaundry2.InfoTokoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_store_black_24dp"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Laundry Hamazah"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jalan Riau No. 23, Jember"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Person :"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="085232823008"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_phone_black_24dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="089667139729"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_phone_black_24dp"/>

    </LinearLayout>



</RelativeLayout>
